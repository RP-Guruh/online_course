<%= turbo_frame_tag "new_course_category" do%>
  <div class="align-middle d-flex justify-content-center modal_form" data-controller="confirmation" data-confirmation-target="modalForm">
    <div class="col-lg-6">
      <div class="card card_form bg-white border-1 rounded-3 mb-4">
        <div class="card-body p-4">
          <h4 class="fs-18 mb-4">Detail course category</h4>
          <div class="tab-content" id="myTab3Content">
            <div class="tab-pane fade show active" id="preview4-tab-pane" role="tabpanel" aria-labelledby="preview4-tab" tabindex="0">
              <%= form_with model: @course_category, local: true do |f| %>
                <div class="form-group mb-4">
                  <%= f.label "Name" %>
                  <%= f.text_field :name, class: "form-control text-dark", readonly: true %>
                </div>
                <div class="form-group mb-4">
                  <%= f.label :note %>
                  <%= f.text_area :note, class: "form-control text-dark", readonly: true %>
                </div>
                <div class="form-group mb-4">
                  <%= f.label "Created by" %>
                  <%= f.text_field :created_by, class: "form-control text-dark", readonly: true %>
                </div>
                <div class="form-group mb-4">
                  <%= f.label "Created at" %>
                  <%= f.text_field :created_at, class: "form-control text-dark", readonly: true %>
                </div>
                <div class="form-group mb-4">
                  <%= f.label "Updated by" %>
                  <%= f.text_field :updated_by, class: "form-control text-dark", readonly: true %>
                </div>
                <div class="form-group mb-4">
                  <%= f.label "Updated at" %>
                  <%= f.text_field :updated_at, class: "form-control text-dark", readonly: true %>
                </div>
                <div class="form-group">
                  <button class="btn btn-warning" type="button" data-action="confirmation#close">
                    Close
                  </button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
