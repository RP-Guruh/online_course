<div class="container">
  <div class="main-content d-flex flex-column p-0">
    <div class="m-auto m-1230">
      <div class="row align-items-center">
        <div class="col-lg-6 d-none d-lg-block">
          <%= image_tag('people_login.jpg', alt: 'login', class: "rounded-3") %>
        </div>
        <div class="col-lg-6">
          <div class="mw-480 ms-lg-auto">
            <% if flash[:alert] %>
              <div class="alert alert-primary bg-danger alert-dismissible text-white" role="alert">
                <button type="button" class="btn-close shadow-none" data-bs-dismiss="alert" aria-label="Close"></button>
                <i class="ri-close-circle-fill fs-18 me-1"></i>
                <%= flash[:alert] %>
              </div>
            <% end %>
            <a href="/" class="d-inline-block mb-4">
              <%= image_tag('logo.svg', alt: 'login', class: "rounded-3 for-light-logo") %>
              <%= image_tag('white-logo.svg', alt: 'login', class: "rounded-3 for-dark-logo") %>
            </a>
            <h3 class="fs-28 mb-2">Welcome back to Trezo!</h3>
            <p class="fw-medium fs-16 mb-4">Sign In with social account or enter your details</p>
            <div class="row justify-content-center">
              <div class="col-lg-4 col-sm-4">
                <a href="https://www.google.com/" target="_blank" class="btn btn-outline-secondary bg-transparent w-100 py-2 hover-bg mb-4" style="border-color: #D6DAE1;">
                  <%= image_tag('google.svg', alt: 'google') %>
                </a>
              </div>
              <div class="col-lg-4 col-sm-4">
                <a href="https://www.facebook.com/" target="_blank" class="btn btn-outline-secondary bg-transparent w-100 py-2 hover-bg mb-4" style="border-color: #D6DAE1;">
                  <%= image_tag('facebook2.svg', alt: 'facebook2') %>
                </a>
              </div>
              <div class="col-lg-4 col-sm-4">
                <a href="https://www.apple.com/" target="_blank" class="btn btn-outline-secondary bg-transparent w-100 py-2 hover-bg mb-4" style="border-color: #D6DAE1;">
                  <%= image_tag('apple.svg', alt: 'apple') %>
                </a>
              </div>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group mb-4">
                <label class="label text-secondary">Email Address</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control h-55", placeholder: "johndoe@example.com" %>
              </div>
              <div class="form-group mb-4 position-relative" data-controller="password-toggle">
                <%= f.password_field :password, autocomplete: "current-password", data: { password_toggle_target: "password" }, class: "form-control h-55", placeholder: "******" %>
                <button type="button" class="position-absolute top-50 end-0 translate-middle-y bg-transparent p-0 pe-3 border-0" data-action="click->password-toggle#toggle" data-password-toggle-target="toggle">
                  <i data-password-toggle-target="icon" class="ri-eye-close-line fs-24 position-relative top-1 text-primary"></i>
                </button>
              </div>
              <div class="form-group mb-4">
                <button type="submit" class="btn btn-primary fw-medium py-2 px-3 w-100">
                  <div class="d-flex align-items-center justify-content-center py-1">
                    <i class="material-symbols-outlined text-white fs-20 me-2">login</i>
                    <span>Login</span>
                  </div>
                </button>
              </div>
              <div class="form-group">
                <p>Do not have an account. <a href="register" class="fw-medium text-primary text-decoration-none">Register</a></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>